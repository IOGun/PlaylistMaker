<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/padding_end"
    tools:context=".ui.settings.activity.SettingsActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/header_padding_start">


        <ImageView
            android:id="@+id/backImage"
            style="@style/HeaderBackIcon"
            android:layout_width="@dimen/header_back_icon_size"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:padding="@dimen/header_back_icon_padding" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/setting_screen_title"
            android:textSize="@dimen/text_title_size" />


    </LinearLayout>

    <Switch
        android:id="@+id/darkThemeSwitch"
        style="@style/SettMenuItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="0dp"
        android:paddingVertical="21dp"
        android:text="@string/setting_screen_dark_theme"
        android:textSize="@dimen/text_size" />

    <FrameLayout
        android:id="@+id/shareFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettMenuItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_screen_share" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/share" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/supportFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettMenuItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_screen_support" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/support" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/termsFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettMenuItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_screen_terms" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/arrow_f" />

    </FrameLayout>


</LinearLayout>

