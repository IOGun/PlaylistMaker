<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="@color/blue"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_gravity="start"
        android:layout_marginBottom="28dp"
        android:background="@color/blue"
        android:paddingTop="14dp"
        android:textAllCaps="false"
        android:text="@string/main_page_header_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />


    <Button
        android:id="@+id/button_find"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/text_title_size"
        android:text="@string/button_find"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/find"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/text_title_size"
        android:text="@string/button_media"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_sett"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/text_title_size"
        android:text="@string/button_settings"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/sett"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/black" />


</LinearLayout>