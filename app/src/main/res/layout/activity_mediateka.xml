<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mediateka.activity.MediatekaActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/header_padding_start">

        <ImageView
            android:id="@+id/backImage"
            style="@style/HeaderBackIcon"
            android:layout_width="@dimen/header_back_icon_size"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:padding="@dimen/header_back_icon_padding" />

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/mediateka_screen_title"
            android:textSize="@dimen/text_title_size"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_mediateka"
        style="@style/TabStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="14sp"
        app:tabTextAppearance="@style/TabText"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>