<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="SettMenuItemStyle">
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin_end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:checked">true</item>
        <item name="android:trackTint">@color/blue_light</item>
        <item name="android:thumbTint">@color/blue</item>
    </style>

    <style name="Main">
        <item name="android:background"> @color/black</item>
    </style>

    <style name="MainHeader">
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Settings">
        <item name="android:background">@color/black</item>
    </style>

    <style name="FragmentPlaylist">
        <item name="android:background">@color/black</item>
    </style>

    <style name="FragmentTopTracks">
        <item name="android:background">@color/black</item>
    </style>


    <style name="HeaderBackIcon">
        <item name="android:src">@drawable/dark_back_arrow</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistNameAndTime">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Placeholders">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Union1">
        <item name="android:src">@drawable/union1_dark_mode</item>
    </style>

    <style name="Union2">
        <item name="android:src">@drawable/union2_dark_mode</item>
    </style>

    <style name="UpdateButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerButton">
        <item name="android:src">@drawable/play_button_dark</item>
    </style>

    <style name="PauseButton">
        <item name="android:src">@drawable/pause_button_dark</item>
    </style>

    <style name="RefreshButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabStyle">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="NotFoundForFragment">
        <item name="android:src">@drawable/dark_mode</item>
    </style>

</resources>