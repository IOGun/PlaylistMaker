<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="SettMenuItemStyle">
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:checked">false</item>
    </style>


    <style name="Main">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MainHeader">
        <item name="android:background">@color/blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Settings">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="FindEditText">
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:background">@color/light_gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:hint">@string/find_hint</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="HeaderBackIcon">
        <item name="android:src">@drawable/light_mode</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistNameAndTime">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Placeholders">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Union1">
        <item name="android:src">@drawable/union1</item>
    </style>

    <style name="Union2">
        <item name="android:src">@drawable/union2</item>
    </style>

    <style name="UpdateButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerButton">
        <item name="android:src">@drawable/play_button</item>
    </style>

    <style name="PauseButton">
        <item name="android:src">@drawable/pause_button</item>
    </style>


</resources>