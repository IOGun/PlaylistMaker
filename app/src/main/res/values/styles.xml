<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="MenuItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="Main">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainHeader">
        <item name="android:background">@color/blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Settings">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Mediateka">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Find">
        <item name="android:background">@color/white</item>
    </style>

    <style name="FragmentPlaylist">
        <item name="android:background">@color/white</item>
    </style>

    <style name="FragmentTopTracks">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="FindEditText">
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:background">@color/light_gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:hint">@string/find_hint</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="HeaderBackIcon">
        <item name="android:src">@drawable/light_mode</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistNameAndTime">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Placeholders">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Union1">
        <item name="android:src">@drawable/union1</item>
    </style>

    <style name="Union2">
        <item name="android:src">@drawable/union2</item>
    </style>

    <style name="UpdateButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerButton">
        <item name="android:src">@drawable/play_button</item>
    </style>

    <style name="PauseButton">
        <item name="android:src">@drawable/pause_button</item>
    </style>

    <style name="RefreshButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabStyle">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="NotFoundForFragment">
        <item name="android:src">@drawable/ic_light_mode</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/text_gray</item>
    </style>

    <!--New Styles-->

    <style name="FragmentSearchContainerStyle">
        <item name="android:background">@drawable/corners</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

    <style name="FragmentSearchIconStyle" parent="SearchClearIconStyle">
        <item name="tint">@color/text_gray</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="FragmentSearchEditTextStyle">
        <item name="android:background">@drawable/corners</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/find_hint</item>
    </style>

    <style name="SearchClearIconStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FragmentClearIconStyle" parent="SearchClearIconStyle">
        <item name="android:src">@drawable/icon_clear</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="tint">@color/text_gray</item>
    </style>

    <style name="FragmentRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="FragmentTextStyleMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="FragmentSearchButtonStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottomViewStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="bottomNavStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav</item>
        <item name="itemTextColor">@drawable/bottom_nav</item>
    </style>



</resources>